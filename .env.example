# LC OPD Daily Reports - Environment Variables Example
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/lc_reports?schema=public"

# =============================================================================
# REDIS/DRAGONFLY QUEUE CONFIGURATION
# =============================================================================

# Dragonfly Redis URL (recommended for production)
DRAGONFLY_URL="redis://localhost:6379"

# Alternative: Standard Redis URL
REDIS_URL="redis://localhost:6379"

# Queue name for notifications (optional, defaults to "notifications")
DRAGONFLY_QUEUE_NAME="notifications"

# Optional: Custom queue endpoint
DRAGONFLY_QUEUE_URL="http://localhost:6379"

# =============================================================================
# VAPID PUSH NOTIFICATION CONFIGURATION
# =============================================================================

# VAPID public key for browser push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key-here"

# VAPID private key for server-side push notifications
VAPID_PRIVATE_KEY="your-vapid-private-key-here"

# Contact email for VAPID notifications (must be valid email)
VAPID_CONTACT_EMAIL="admin@yourdomain.com"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
JWT_SECRET="your-jwt-secret-key-here"

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR="./uploads"
PUBLIC_URL="localhost:3000"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV="development"
PORT="3000"

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# =============================================================================
# GENERATING VAPID KEYS
# =============================================================================
# To generate VAPID keys, run:
# npx web-push generate-vapid-keys
# 
# This will output something like:
# =======================================
# Public Key:
# BIXzZ5D9f5Y8... (copy to NEXT_PUBLIC_VAPID_PUBLIC_KEY)
# 
# Private Key:
# 4mXG9k8mZ8f... (copy to VAPID_PRIVATE_KEY)
# =======================================
# Production Environment Template
DATABASE_URL="postgresql://username:password@hostname:5432/database?schema=public"

# Dragonfly Redis Configuration
# Use either DRAGONFLY_URL (recommended) or individual DRAGONFLY_HOST/PORT/PASSWORD/DB
DRAGONFLY_URL="redis://username:password@hostname:port/db"
DRAGONFLY_QUEUE_NAME="notifications"
DRAGONFLY_QUEUE_URL="redis://notifications"

# Alternative individual configuration (if not using DRAGONFLY_URL)
# DRAGONFLY_HOST="localhost"
# DRAGONFLY_PORT="6379"
# DRAGONFLY_PASSWORD="your-password"
# DRAGONFLY_DB="0"

# Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_CONTACT_EMAIL="admin@yourdomain.com"

# Telegram Bot (optional)
# TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

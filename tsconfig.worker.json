{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/workers/**/*.ts", "src/lib/**/*.ts", "src/utils/**/*.ts"],
  "exclude": ["node_modules"]
} 
{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/workers/dragonfly-worker.ts",
    "src/workers/db-maintenance.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
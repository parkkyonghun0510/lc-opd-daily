{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/workers/dragonfly-worker.ts",
    "src/workers/db-maintenance.ts",
    "src/lib/dragonfly-queue.ts"
  ],
  "exclude": ["node_modules"]
}